---
import { Icon } from 'astro-icon/components';

interface Props {
	icon: string;
	href: string;
	label: string;
}

const { icon, href, label } = Astro.props;
---

<a
	class="ease m-1 inline-flex items-center p-1 text-gray-400 transition duration-200 hover:bg-slate-100"
	target="_blank"
	rel="noopener"
	href={href}
	aria-label={label}
	title={label}
	draggable="false"
>
	<Icon name={icon} class="h-6 w-6" />
</a>
